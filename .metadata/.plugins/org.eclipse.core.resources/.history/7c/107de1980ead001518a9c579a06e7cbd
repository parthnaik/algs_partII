import java.util.Arrays;
import java.util.Comparator;
import edu.princeton.cs.algs4.StdOut;

public class CircularSuffixArray {
	// unit testing of the methods (optional)
	public static void main(String[] args) {
		
	}
	
	// circular suffix array of s
	public CircularSuffixArray(String s) {
		if (s == null) throw new java.lang.NullPointerException();
		this.s = s;
		len = s.length();
		index = new Integer[length()];
		
		for (int i = 0; i < length(); i++) {
			index[i] = i;
		}
		
		calculate();
	}
	
	// length of s
    public int length() {
    	return len;
    }
    
    // returns index of ith sorted suffix
    public int index(int i) {
    	if (i < 0 || i > length() - 1) throw new java.lang.IndexOutOfBoundsException();    	
    	return index[i];
    }
    
    // Instance Variables
    private final String s;
    private final int len;
    private Integer[] index;
    
    // Private Methods
    private void calculate() {
    	Arrays.sort(index, new Comparator<Integer>() {
    		public int compare(Integer a, Integer b) {
    			if (a.equals(b)) {
    				return 0;
    			} else {
    				for (int i = 0; i < len; i++) {
    					if (s.charAt(a + i) % len != s.charAt(b + i) % len) {
    						return s.charAt((a + i) % len) - s.charAt((b + i) % len);
    					}
    				}
    				
    				return 0;
    			}
    		}
    	});
    }
}
